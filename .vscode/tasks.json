{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Project",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++20",
                "-g",
                "-I${workspaceFolder}/Header",
                "${workspaceFolder}/Main.cpp",
                "${workspaceFolder}/Source/*.cpp",
                "-o",
                "${workspaceFolder}/Bin/Main"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}