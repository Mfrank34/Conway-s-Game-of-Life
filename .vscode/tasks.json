{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build all files",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-I${workspaceFolder}/Header",
                "${workspaceFolder}/Main.cpp",
                "${workspaceFolder}/Source/Cell.cpp",
                "-o",
                "${workspaceFolder}/Bin/Main"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Builds main.cpp and all .cpp files in Source folder"
        }
    ]
}
