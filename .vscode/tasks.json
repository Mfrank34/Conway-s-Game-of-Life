{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build (Console Mode)",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "g++ -std=c++20 -fdiagnostics-color=always -g -I\"${workspaceFolder}/Header\" \"${workspaceFolder}/Main.cpp\" ${workspaceFolder}/Source/*.cpp -o \"${workspaceFolder}/Bin/Main\""
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Build console-only version (no wxWidgets)"
        },
        {
            "label": "Build (GUI Mode with wxWidgets)",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "g++ -std=c++20 -fdiagnostics-color=always -g -I\"${workspaceFolder}/Header\" \"${workspaceFolder}/Main.cpp\" ${workspaceFolder}/Source/*.cpp -o \"${workspaceFolder}/Bin/Main\" $(wx-config --cxxflags --libs)"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Build GUI version with wxWidgets"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-I\"${workspaceFolder}/Header\"",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}